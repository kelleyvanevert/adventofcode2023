{
  "name": "adventlang",
  "displayName": "Adventlang",
  "author": {
    "name": "Kelley van Evert",
    "email": "hello@klve.nl"
  },
  "description": "Language features for Kelley's Adventlang :)",
  "publisher": "hello-kelley",
  "icon": "icon.png",
  "repository": {
    "type": "git",
    "url": "https://github.com/kelleyvanevert/adventofcode2023",
    "directory": "adventlang_vscode_ext"
  },
  "license": "MIT",
  "version": "0.0.4",
  "engines": {
    "vscode": "^1.84.0"
  },
  "categories": [
    "Programming Languages"
  ],
  "keywords": [
    "Advent of Code",
    "Syntax highlighting"
  ],
  "activationEvents": [],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "adventlang.helloWorld",
        "title": "Adventlang says hi!"
      }
    ],
    "languages": [
      {
        "id": "adventlang",
        "extensions": [
          ".al"
        ]
      }
    ],
    "grammars": [
      {
        "language": "adventlang",
        "scopeName": "source.adventlang",
        "path": "./syntaxes/adventlang.tmGrammar.json"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "yarn run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./"
  },
  "devDependencies": {
    "@types/vscode": "^1.84.0",
    "@types/node": "18.x",
    "typescript": "^5.3.2"
  }
}
